---
interface Props{
    id: string;
    img: string;
    details: string | null;
    success: boolean;
    flightNumber: number;
}

const { success, flightNumber, img, id,  details } = Astro.props

const successText = success ? 'Exito' : 'Fallo'
---


<a 
href={`/launch/${id}`}
class="rounded-lg border shadow-md bg-gray-800 border-gray-700 hover:scale-105 hover:bg-gray-700 hover:border-gray-500 transition flex flex-col p-4"
>
    <picture class="flex justify-center p-4">
        <img src={img} alt={`Patc for launch ${id}`} class="mb-5 rounded-lg">
    </picture>

    <header class="p-4 flex-grow">
        <span
            class:list={
                [
                    "text-xs font-semibold mr-2 px-2.5 py-0.5 rounded",
                    {
                        "bg-green-500 text-green-100": success,
                        "bg-red-500 text-red-100": !success
                    }
                ]
            }
        >{successText}</span>
    </header>

    <h2 class="my-2 text-2xl font-bold tracking-tight text-white">
        Flight #{flightNumber}
    </h2>

    <p class="mb-4 font-light text-gray-400">
        {details != null && details?.length > 100 ? details?.slice(0, 100) + '...' : details}
    </p>
</a>